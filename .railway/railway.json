{
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "plan": {
        "phases": {
          "setup": {
            "nixPkgs": ["nodejs_20", "coreutils"]
          },
          "install": {
            "cmds": ["npm install --force"]
          },
          "build": {
            "cmds": [
              "NEXT_PUBLIC_BACKEND_URL=$NEXT_PUBLIC_BACKEND_URL NEXT_PUBLIC_AUTH_URL=$NEXT_PUBLIC_AUTH_URL npm run build"
            ]
          },
          "start": {
            "cmd": "npm run start -- -p $PORT"
          }
        }
      }
    }
  }
}
